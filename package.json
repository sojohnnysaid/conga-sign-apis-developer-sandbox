{
  "name": "conga-sign-apis-developer-sandbox",
  "version": "0.1.0",
  "description": "A development sandbox for testing Conga Sign APIs with Svelte and Express",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon src/backend/server.js",
    "build": "vite build",
    "build:all": "npm run build && npm run build:backend",
    "build:backend": "echo \"No backend build step required\"",
    "start": "node src/backend/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "format": "prettier --write ."
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.9",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
